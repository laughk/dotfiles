{

  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,

  "suggest.triggerAfterInsertEnter": true,
  "suggest.timeout": 500,
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    }
  }
}
