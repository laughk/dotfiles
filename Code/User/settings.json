{
    "[go]": {
        "editor.snippetSuggestions": "none",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    },
    "gopls": {
        "usePlaceholders": true, // add parameter placeholders when completing a function

        // Experimental settings
        "completeUnimported": true, // autocomplete unimported packages
        "deepCompletion": true     // enable deep completion
    },
    "go.languageServerFlags": [
        "-rpc.trace", // for more detailed debug logging
        "serve",
        "--debug=localhost:6060", // to investigate memory usage, see profiles 
    ],
    "go.languageServerExperimentalFeatures": {
         "format": true,
         "autoComplete": true,
         "rename": true,
         "goToDefinition": true,
         "hover": true,
         "signatureHelp": true,
         "goToTypeDefinition": true,
         "goToImplementation": true,
         "documentSymbols": true,
         "workspaceSymbols": true,
         "findReferences": true
    },
    "go.toolsEnvVars": {"GO111MODULE": "on"},
    "files.eol": "\n", // formatting only supports LF line endings
    "editor.fontFamily": "'Cica', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "debug.console.fontSize": 18,
    "terminal.integrated.fontFamily": "'Cica', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "One Monokai",
    "files.exclude": {
        "**/venv": true
    },
    "terminal.integrated.fontSize": 17,
    "editor.stablePeek": true,
    "workbench.editor.enablePreview": false,
    "diffEditor.renderSideBySide": true,
    "open-in-browser.default": "xdg-open",
    "git.autofetch": true,
    "terminal.external.linuxExec": "alacritty",

    "python.linting.enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.terminal.activateEnvInCurrentTerminal": true,
    "python.venvFolders": [
        "**/venv"
    ],
    "vim.useSystemClipboard": true,
    "vim.normalModeKeyBindings": [
        // / でVS Codeの検索機能を使う
        {"before": ["/"], "commands": ["actions.find"]},
        // パネルの開閉
        { "before": ["C-j"], "commands": [ "workbench.action.togglePanel" ] },
    ],
    "vim.leader": ",",
    "window.zoomLevel": 1,
    "rest-client.fontSize": 18,
    "python.venvPath": "~/.venvs",
    "editor.renderWhitespace": "all",
    "editor.renderControlCharacters": true,
    "editor.fontSize": 16,
    "docker.dockerComposeBuild": false,
    "taskExplorer.enableWorkspace": false,
    "taskExplorer.enableTsc": false,
    "taskExplorer.enableSideBar": true,
    "taskExplorer.enableRuby": false,
    "taskExplorer.enableNsis": false,
    "taskExplorer.enablePowershell": false,
    "taskExplorer.enablePerl": false,
    "taskExplorer.enablePython": false,
    "taskExplorer.enableGulp": false,
    "taskExplorer.enableGrunt": false,
    "taskExplorer.enableGradle": false,
    "taskExplorer.enableBatch": false,
    "taskExplorer.enableBash": false,
    "taskExplorer.enableAppPublisher": false,
    "taskExplorer.enableAnt": false,
    "taskExplorer.enableAnsiconForAnt": false,
    "taskExplorer.pathToMake": "$HOME/.bin/aia-make.sh",
    "go.useLanguageServer": true,
    "opn-in-browser.default": "Chromium",
    "breadcrumbs.enabled": true,
    "window.titleBarStyle": "custom",
    "timeline.showView": true,
    "diffEditor.ignoreTrimWhitespace": true,
    "typescript.implementationsCodeLens.enabled": true,
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "python.jediEnabled": false,
    "python.envFile": "${workspaceFolder}/venv",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb"
    },
    "python.languageServer": "Microsoft",
}