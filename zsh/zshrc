#! zsh

## Configure
# --------------------------------------------------------
ZSH_CONFIG_ROOT="${HOME}/.dotfiles/zsh/conf.d"
ZSH_INCLDE_CONF=(
  zplug base alias seacret anyframe python ruby secret
)

## function
# --------------------------------------------------------
function include_conf() {
  local _zsh_config_root=${1:-"${HOME}/.dotfiles/zsh/conf.d"}

  for conf in ${ZSH_INCLDE_CONF}
  do
    [[ -f ${_zsh_config_root}/${conf}.zsh ]] && {
      source ${_zsh_config_root}/${conf}.zsh
    }
  done
}

## main
# --------------------------------------------------------
include_conf ${ZSH_CONFIG_ROOT}
